<h1>  <%= @category.name %></h1>

<div class="row">
	<% @products_by_cat.each do |product| %>
		<div class="col-md-4">
			<div class="panel panel-default">
				<div class="panel-body">
					<%= image_tag product.image.url %>
					<p>
						<%= number_to_currency product.price %>
					</p>
					<p>
						<%= product.name %>
					</p>
				</div>
			</div>
		</div>
		<% end %>
</div>